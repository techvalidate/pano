:ruby
  @page_title = 'Forms'
  @nav        = :ui
  @subnav     = :forms

= card 'Text Fields and Text Areas' do
  = haml_example do
    :plain
      = form_with scope: User.new do |f|
        .grid
          .col-6
            .form-group
              = f.label :first_name
              = f.text_field :first_name, value: 'Lisa'
            .form-group.form-group--optional
              = f.label :last_name
              = f.text_field :last_name, placeholder: 'Optional Last Name'
              .form-helper-text
            .form-group
              = f.label :email, 'Email with icon'
              = f.email_field :email, placeholder: 'Email'
              = icon 'email'

            .form-group
              = f.label :password
              = f.password_field :password
              .form-helper-text Your password must be 8-10 characters

            .form-group
              = f.label :description
              = f.text_area :description
          .col-6

= card 'Select, Checkboxes, and Radios' do
  = haml_example do
    :plain
      = form_with scope: User.new do |f|
        .grid
          .col-6
            .form-group.form-group--optional
              = f.label :title
              = f.select :title, options_for_select([['Select a title'], ['Director', 1], ['Manager', 2], ['Founder', 3]])
              .form-helper-text

= card 'Form States' do
  = haml_example do
    :plain
      = form_with scope: User.new do |f|
        .form-group.form-group--focus
          = f.label :password
          = f.password_field :password, value: '1234'
          .form-helper-text Your password must be 8-10 characters
        .form-group.form-group--success
          = f.label :email
          = f.email_field :email, value: 'lisa@freshgreen.demo'
          .form-helper-text Success!
        .form-group.form-group--error
          = f.label :email
          = f.email_field :email, value: 'lisa@freshgreen,demo'
          .form-helper-text Error!
        .form-group.form-group--disabled
          = f.label :disabled
          = f.text_field :disabled, value: 'Disabled input'
          .form-helper-text This input is disabled
        .form-group.form-group--disabled
          = f.label :title
          = f.select :title, options_for_select([['Select a title'], ['Director', 1], ['Manager', 2], ['Founder', 3]])
