%hr
%h5.section-title 3.x button styles
= card 'Button Groups' do
  = haml_example do
    :plain
      %p
        .btn-group.m-stack
          = btn_to "Option 1", '#'
          = btn_to "Option 2", '#', class: 'selected'
          = btn_to "Option 3", '#'
      %p
        .btn-group.btn-slate.m-stack
          = btn_to "Option 1", '#'
          = btn_to "Option 2", '#', class: 'selected'
          = btn_to "Option 3", '#'
      %p
        .btn-group.btn-gray.m-stack
          = btn_to "Option 1", '#'
          = btn_to "Option 2", '#', class: 'selected'
          = btn_to "Option 3", '#'
      %p
        .btn-group.m-stack
          = icon_btn_to :edit, "Option 1", '#'
          = icon_btn_to :add, "Option 2", '#', class: 'selected'
          = icon_btn_to :delete, "Option 3", '#'
      %p
        .btn-group.btn-gray.m-stack
          = small_btn_to "Option 1", '#'
          = small_btn_to "Option 2", '#', class: 'selected'
          = small_btn_to "Option 3", '#'
      .box.bg-dark-blue
        %p.white use this one only on a dark bg
        %p.btn-group.btn-outline-white.m-stack
          = icon_btn_to :edit, "Option 1", '#'
          = icon_btn_to :add, "Option 2", '#', class: 'selected'
          = icon_btn_to :delete, "Option 3", '#'





