- klass = "wds-button #{@class_name} wds-button--#{@size} wds-button--#{@color} wds-button--#{@variant} wds-button--#{@icon_position}"
- if @stretched
  - klass << ' wds-button--stretched'

- if @href.blank?
  - if @disabled
    %button{disabled: '', class: klass, type: @button_type, data: {action: @action}}
      = yield
  - else
    %button{class: klass, type: @button_type, data: {action: @action}}
      = yield

- else
  - if @disabled
    %a{class: klass, href: @href, disabled: ''}
      = yield
  - else
    %a{class: klass, href: @href, data: {action: @action}}
      = yield
